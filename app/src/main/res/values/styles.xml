<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueBMW</item>
        <item name="colorPrimaryDark">@color/blueDarkBMW</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/blackBMW</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/whiteBMW</item>
        <item name="android:textColor">@color/blackBMW</item>
        <item name="android:dropDownListViewStyle">@style/popup</item>
    </style>

    <style name="popup" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/blackBMW</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:popupBackground">@color/whiteBMW</item>
    </style>

</resources>
